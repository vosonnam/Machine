@model xqmachine.Models.ResetPasswordViewModel
@{
    ViewBag.Title = "Cập nhật mật khẩu";
}

<!-- ...:::: Start Breadcrumb Section:::... -->
<div class="breadcrumb-section breadcrumb-bg-color--black">
    <div class="breadcrumb-wrapper">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="breadcrumb-nav breadcrumb-nav-color--black breadcrumb-nav-hover-color--golden">
                        <nav aria-label="breadcrumb">
                            <ul>
                                <li><a href="@Url.Action("Index","Home")">Trang Chủ</a></li>
                                <li class="active" aria-current="page">
                                    @ViewBag.Title
                                </li>
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- ...:::: End Breadcrumb Section:::... -->
<!-- ...:::: Start Customer Login Section :::... -->
<div class="customer-login">
    <div class="container">
        <div class="row d-xl-flex justify-content-center">
            <!--login area start-->
            <div class="col-lg-4 col-md-4">
                <div class="account_form" data-aos="fade-up" data-aos-delay="0">
                    @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        <h3 class="text-center">@ViewBag.Title</h3>
                        <hr />

                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.Code)
                        <label class="mb-1">Email đăng ký<span class="text-danger">*</span></label>
                        <div class="default-form-box">
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                        </div>
                        <label class="mb-1">Mật khẩu mới<span class="text-danger">*</span></label>
                        <div class="default-form-box">
                            @Html.EditorFor(model => model.Password, new { htmlAttributes = new { type = "password" } })
                            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                        </div>
                        <label class="mb-1">Mật khẩu xác nhận<span class="text-danger">*</span></label>
                        <div class="default-form-box">
                            @Html.EditorFor(model => model.ConfirmPassword, new { htmlAttributes = new { type = "password" } })
                            @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" })
                        </div>
                        <div class="login_submit">
                            <button class="btn btn-md btn-black-default-hover mb-4 w-100" style="height:45px;" type="submit">Cập nhật</button>
                        </div>
                        <div class="d-flex justify-content-center">
                            <span>Chuyển về </span><a href="@Url.Action("Index","Home")" style="font-weight:600;margin-left:5px;">Trang chủ</a>
                            <span>Đăng nhập với tài khoảng </span><a href="@Url.Action("Login","Account")" style="font-weight:600;margin-left:5px;">Đăng nhập</a>
                        </div>
                    }
                </div>
            </div>
            <!--login area start-->
        </div>
    </div>
</div>
<!-- ...:::: End Customer Login Section :::... -->

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
