@using xqmachine.Models.Helpers
<div class="col-sm-12 col-md-3 col-lg-3">
    <!-- Nav tabs -->
    <div class="dashboard_tab_button" data-aos="fade-up" data-aos-delay="0">
        <ul role="tablist" class="nav flex-column dashboard-list">
            <li>
                <a href="@Url.Action("Editprofile","Account")" class="nav-link btn btn-block btn-md btn-black-default-hover @(ViewContext.RouteData.Values["Action"].ToString() == "Editprofile" ? "active" :"")">Thông tin Tài Khoản</a>
            </li>
            <li>
                <a href="@Url.Action("TrackingOrder","Account")" class="nav-link btn btn-block btn-md btn-black-default-hover @(ViewContext.RouteData.Values["Action"].ToString() == "TrackingOrder" ? "active" : ViewContext.RouteData.Values["Action"].ToString() == "TrackingOrderDetail" ? "active" :"")">Lịch sử mua hàng</a>
            </li>
            @if (User.Identity.HasPassword())
            {
                <li>
                    <a href="@Url.Action("ChangePassword","Account")" class="nav-link btn btn-block btn-md btn-black-default-hover @(ViewContext.RouteData.Values["Action"].ToString() == "ChangePassword" ? "active" : "")">Đổi mật khẩu</a>
                </li>
            }
            else
            {
                <li>
                    <a href="@Url.Action("SetPassword","Account")" class="nav-link btn btn-block btn-md btn-black-default-hover @(ViewContext.RouteData.Values["Action"].ToString() == "SetPassword" ? "active" : "")">Đặt mật khẩu</a>
                </li>
            }
            <li>
                <a href="@Url.Action("Address","Account")" class="nav-link btn btn-block btn-md btn-black-default-hover @(ViewContext.RouteData.Values["Action"].ToString() == "Address" ? "active" : "")">Sổ địa Chỉ</a>
            </li>
            @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))
            {
                @Html.AntiForgeryToken()
                <li><a class="nav-link btn btn-block btn-md btn-black-default-hover" href="javascript:document.getElementById('logoutForm').submit()">Đăng xuất</a></li>
            }
        </ul>
    </div>
</div>